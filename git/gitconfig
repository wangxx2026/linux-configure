# vim: ft=gitconfig

[core]
    autocrlf = false #该参数可以是input，true，false，回车换行转换，会引发莫名其妙的问题
    whitespace = trailing-space,space-before-tab,indent-with-non-tab

[user]
    name = 王星星 
    email = wangxx2026@126.com

[alias]
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ci = commit
    co = checkout
    st = status -sb
    track = checkout -t
    unstage = reset HEAD --

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[diff]
    tool = vimdiff
[difftool]
    prompt = No
